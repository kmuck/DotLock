{
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": { 
          "destination1": {
            "Address": "http://auth-service"
          }
        }
      }
    }
  }
}